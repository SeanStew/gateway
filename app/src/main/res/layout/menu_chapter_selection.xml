<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">


	<FrameLayout
		android:id="@+id/menuChapterSelection_bookSelection"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/bordered_button"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:id="@+id/menuChapterSelection_bookSelectionText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:minWidth="38dp"
			android:padding="8dp"/>
	</FrameLayout>

	<FrameLayout
		android:id="@+id/menuChapterSelection_chapterSelection"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="4dp"
		android:background="@drawable/bordered_button"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground">

		<TextView
			android:id="@+id/menuChapterSelection_chapterSelectionText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:minWidth="38dp"
			android:padding="8dp"/>
	</FrameLayout>

</LinearLayout>