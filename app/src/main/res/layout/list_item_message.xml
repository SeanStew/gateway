<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5dp">

		<ca.gatewaybaptistchurch.gateway.view.FixedRatioRelativeLayout
			android:id="@+id/messageItem_rootView"
			android:layout_width="match_parent"
			android:layout_height="1000dp"
			android:clickable="true"
			app:aspectRatioHeight="9"
			app:aspectRatioWidth="16">

			<ImageView
				android:id="@+id/messageItem_image"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="centerCrop"
				android:src="@drawable/messages_placeholder"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:rotation="180"
					android:src="@drawable/bottom_shadow"/>

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:src="@drawable/bottom_shadow"/>
			</LinearLayout>

			<net.steamcrafted.materialiconlib.MaterialIconView
				android:id="@+id/messageItem_playButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:background="?attr/selectableItemBackgroundBorderless"
				android:clickable="true"
				app:materialIcon="play_circle_outline"
				app:materialIconColor="@color/primaryTextLight"
				app:materialIconSize="64dp"/>

			<TextView
				android:id="@+id/messageItem_duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_margin="10dp"
				android:gravity="center"
				android:text="23min"
				android:textColor="@color/primaryTextLight"/>

			<TextView
				android:id="@+id/messageItem_title"
				style="@style/Base.TextAppearance.AppCompat.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:layout_margin="10dp"
				android:layout_toLeftOf="@id/messageItem_duration"
				android:text="New Years Message"
				android:textColor="@color/primaryTextLight"/>

			<TextView
				android:id="@+id/messageItem_speaker"
				style="@style/TextAppearance.AppCompat.Subhead"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_margin="10dp"
				android:text="Gateway Baptist Church"
				android:textColor="@color/primaryTextLight"/>

			<TextView
				android:id="@+id/messageItem_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_margin="10dp"
				android:gravity="center"
				android:text="January 1, 2017"
				android:textColor="@color/primaryTextLight"/>
		</ca.gatewaybaptistchurch.gateway.view.FixedRatioRelativeLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>